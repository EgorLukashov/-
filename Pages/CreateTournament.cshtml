@model Турнирная_сетка.Pages.CreateTournamentModel

<h2>Создать Турнир</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Tournament.Name" class="control-label"></label>
        <input asp-for="Tournament.Name" class="form-control" />
